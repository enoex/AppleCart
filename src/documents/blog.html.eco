---
layout: 'default'
pageName: 'blog'
---

<h1 class="current-page">Blog</h1>

<% for post in @getCollection('posts').sortArray(date: -1): %>
	<div class="new-post">
        <h3><a href="<%= post.url %>"><%- post.title or post.name %></a></h3>
        <h4><%= post.date %></h4>
        <%- post.description %>
    </div>
<% end %>
